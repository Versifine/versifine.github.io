{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "vitepress/client"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.mts",
    ".vitepress/**/*.vue",
    "**/*.ts",
    "**/*.mts",
    "**/*.vue"
  ],
  "exclude": [
    "node_modules",
    ".vitepress/dist",
    ".vitepress/cache",
    "docs/.vitepress/**"
  ]
}
